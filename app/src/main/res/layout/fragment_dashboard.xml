<?xml version="1.0" encoding="utf-8"?>

<!--
    1. המיכל החיצוני: NestedScrollView
     כי הדשבורד עשוי להיות ארוך יותר מהמסך.
    רכיב זה מאפשר למשתמש לגלול למטה.
-->
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B1121"
    android:fillViewport="true"
    tools:context=".DashboardFragment">

    <!--
         הלוח הפנימי: ConstraintLayout
        בתוך הגלילה, אנחנו צריכים "לוח" אחד גדול שעליו נשים את כל הכרטיסים.
    -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- כותרת הדף -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overview"
            android:textColor="#E2E8F0"
            android:textSize="24sp"
            android:fontFamily="sans-serif-black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <!-- ========================================== -->
        <!-- שורה 1: כרטיסים -->
        <!-- ========================================== -->
        <!-- כרטיס 1: רווח כולל (P&L) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardProfit"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="#1E293B"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toStartOf="@+id/cardWinRate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp">

                <TextView
                    android:id="@+id/labelProfit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOTAL P&amp;L"
                    android:textColor="#94A3B8"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_logo_placeholder"
                    android:contentDescription="Profit icon"
                    app:tint="#10B981"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvProfitValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+$1,250"
                    android:textColor="#E2E8F0"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvProfitSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+12.5% this month"
                    android:textColor="#10B981"
                    android:textSize="17dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- כרטיס 2: אחוז הצלחה (Win Rate) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardWinRate"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            app:cardBackgroundColor="#1E293B"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cardProfit"
            app:layout_constraintTop_toBottomOf="@id/tvTitle">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WIN RATE"
                    android:textColor="#94A3B8"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_target"
                    android:contentDescription="Win rate icon"
                    app:tint="#C084FC"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvWinRateValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="68%"
                    android:textColor="#E2E8F0"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvWinSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 total trades"
                    android:textColor="#94A3B8"
                    android:textSize="17dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- ========================================== -->
        <!-- שורה 2: כרטיסים נוספים -->
        <!-- ========================================== -->

        <!-- כרטיס 3: עסקאות פעילות (Active) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardActive"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="#1E293B"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toStartOf="@+id/cardTopPattern"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardProfit">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACTIVE"
                    android:textColor="#94A3B8"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- אייקון ברק (צהוב) -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_spotlight"
                    android:contentDescription="Active trades icon"
                    app:tint="#FBBF24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvActiveValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="#E2E8F0"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open positions"
                    android:textColor="#94A3B8"
                    android:textSize="17dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- כרטיס 4: תבנית מובילה (Top Pattern) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTopPattern"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            app:cardBackgroundColor="#1E293B"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cardActive"
            app:layout_constraintTop_toBottomOf="@id/cardWinRate">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOP PATTERN"
                    android:textColor="#94A3B8"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- אייקון מדליה (סגול) -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_medal"
                    android:contentDescription="Top pattern icon"
                    app:tint="#C084FC"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvTopPatternValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Momentum"
                    android:textColor="#E2E8F0"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvTopPatternSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+18.4% Avg."
                    android:textColor="#10B981"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- ========================================== -->
        <!-- AI Insight Widget (התובנה החכמה) -->
        <!-- ========================================== -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/aiWidget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/header_background"
            android:backgroundTint="#2E1065"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardActive"> <!-- קושר את זה מתחת לשורה השנייה -->

            <ImageView
                android:id="@+id/iconAi"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_spotlight"
                android:contentDescription="AI Insight icon"
                app:tint="#A78BFA"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/titleAi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Gemini Market Insight"
                android:textColor="#A78BFA"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/iconAi"
                app:layout_constraintTop_toTopOf="@id/iconAi"
                app:layout_constraintBottom_toBottomOf="@id/iconAi"/>

            <TextView
                android:id="@+id/AiInsight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Your Momentum trades have a 72% win rate before 11:00 AM. Consider focusing capital in early sessions."
                android:textColor="#E2E8F0"
                android:textSize="13sp"
                android:lineSpacingExtra="4dp"
                app:layout_constraintStart_toStartOf="@id/titleAi"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleAi" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- ========================================== -->
        <!-- רשימת הפוזיציות הפעילות (Active Portfolio) -->
        <!-- ========================================== -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clActivePortfolio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:padding="16dp"
            android:background="@drawable/header_background"
            android:backgroundTint="#161E2D"
            app:layout_constraintTop_toBottomOf="@id/aiWidget">

            <!-- כותרת האזור -->
            <ImageView
                android:id="@+id/iconBriefcase"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_dashboard"
                android:contentDescription="Active Portfolio icon"
                app:tint="#64748B"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Active Portfolio"
                android:textColor="#E2E8F0"
                android:textStyle="bold"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@id/iconBriefcase"
                app:layout_constraintTop_toTopOf="@id/iconBriefcase"
                app:layout_constraintBottom_toBottomOf="@id/iconBriefcase"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● LIVE"
                android:textColor="#10B981"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/header_background"
                android:backgroundTint="#064E3B"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <!-- רשימה דינמית של עסקאות פעילות (זה ה-ID שהיה חסר!) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerActiveTrades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/iconBriefcase"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>