<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/header_background"
    android:backgroundTint="#111621"
    android:padding="12dp">

    <!-- 
        1. לוגו המניה (עיגול)
    -->
    <TextView
        android:id="@+id/tvRowLogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/header_background"
        android:backgroundTint="#282F3D"
        android:gravity="center"
        tools:text="AAPL" 
        android:textColor="#94A3B8"
        android:textSize="12sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 2. אזור המידע המרכזי -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDelete"
        app:layout_constraintStart_toEndOf="@id/tvRowLogo"
        app:layout_constraintTop_toTopOf="parent">

        <!-- שורה עליונה: שם המניה + סטטוס -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvRowTicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="AAPL"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvRowStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/header_background"
                android:backgroundTint="#1E293B"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                tools:text="OPEN"
                android:singleLine="true"
                android:textColor="#64748B"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- שם התבנית (בסגול) -->
        <TextView
            android:id="@+id/tvRowPattern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Bull Flag"
            android:textColor="#818CF8"
            android:textSize="12sp"
            android:layout_marginTop="2dp"/>
            
        <!-- פרטים נוספים -->
        <TextView
            android:id="@+id/tvRowDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="50 shares $145.20"
            android:textColor="#E2E8F0"
            android:textSize="13sp"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- 3. כפתור המחיקה -->
    <ImageView
        android:id="@+id/btnDelete"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="6dp"
        android:src="@drawable/ic_delete"
        android:contentDescription="@string/delete_trade"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>