<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/header_backround"
    android:backgroundTint="#111621"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <!-- לוגו (עיגול עם האות הראשונה) -->
    <TextView
        android:id="@+id/tvLogo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/header_backround"
        android:backgroundTint="#282F3D"
        android:gravity="center"
        android:text="T"
        android:textColor="#94A3B8"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- פרטים (שם, סטטוס, תבנית) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvRowDetails"
        app:layout_constraintStart_toEndOf="@id/tvLogo"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvRowTicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TICKER"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvRowStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:text="OPEN"
                android:textColor="#64748B"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvRowPattern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pattern Name"
            android:textColor="#818CF8"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- פרטים נוספים (מחיר וכמות) -->
    <TextView
        android:id="@+id/tvRowDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 @ $150"
        android:textColor="#E2E8F0"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>